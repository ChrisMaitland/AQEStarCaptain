<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RewardsActivity">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".RewardsActivity">

        <ImageView
            android:id="@+id/green"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/green_star"
            app:layout_constraintBottom_toTopOf="@+id/orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blue"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/purple"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/purple_star"
            app:layout_constraintBottom_toTopOf="@+id/red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pink"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/sparkleCount"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:background="@android:color/transparent"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/rainbowCount"
            app:layout_constraintStart_toEndOf="@+id/sparkle"
            app:layout_constraintTop_toBottomOf="@+id/yellowCount" />

        <ImageView
            android:id="@+id/blue"
            android:layout_width="58dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/blue_star"
            app:layout_constraintBottom_toTopOf="@+id/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/orange"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/orange_star"
            app:layout_constraintBottom_toTopOf="@+id/pink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/green"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/pink"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/pink_star"
            app:layout_constraintBottom_toTopOf="@+id/purple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orange"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/red"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/red_star"
            app:layout_constraintBottom_toTopOf="@+id/yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/purple"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/yellow"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/yellow_star"
            app:layout_constraintBottom_toTopOf="@+id/sparkle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/red"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/sparkle"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/sparkle_star"
            app:layout_constraintBottom_toTopOf="@+id/rainbow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yellow"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/rainbow"
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/rainbow_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sparkle"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/greenCount"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:background="@android:color/transparent"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/orangeCount"
            app:layout_constraintStart_toEndOf="@+id/green"
            app:layout_constraintTop_toBottomOf="@+id/blueCount" />

        <TextView
            android:id="@+id/orangeCount"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:background="@android:color/transparent"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/pinkCount"
            app:layout_constraintStart_toEndOf="@+id/orange"
            app:layout_constraintTop_toBottomOf="@+id/greenCount" />

        <TextView
            android:id="@+id/pinkCount"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:background="@android:color/transparent"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/purpleCount"
            app:layout_constraintStart_toEndOf="@+id/pink"
            app:layout_constraintTop_toBottomOf="@+id/orangeCount" />

        <TextView
            android:id="@+id/purpleCount"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:background="@android:color/transparent"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/redCount"
            app:layout_constraintStart_toEndOf="@+id/purple"
            app:layout_constraintTop_toBottomOf="@+id/pinkCount" />

        <TextView
            android:id="@+id/redCount"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/yellowCount"
            android:layout_marginStart="24dp"
            android:background="@android:color/transparent"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/yellowCount"
            app:layout_constraintStart_toEndOf="@+id/red"
            app:layout_constraintTop_toBottomOf="@+id/purpleCount" />

        <TextView
            android:id="@+id/yellowCount"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/sparkleCount"
            android:layout_marginStart="24dp"
            android:background="@android:color/transparent"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/sparkleCount"
            app:layout_constraintStart_toEndOf="@+id/yellow"
            app:layout_constraintTop_toBottomOf="@+id/redCount" />

        <TextView
            android:id="@+id/rainbowCount"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_toStartOf="@+id/collect"
            android:background="@android:color/transparent"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/rainbow"
            app:layout_constraintTop_toBottomOf="@+id/sparkleCount" />

        <TextView
            android:id="@+id/blueCount"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/greenCount"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/greenCount"
            app:layout_constraintStart_toEndOf="@+id/blue"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <TextView
            android:id="@+id/collect"
            android:layout_width="176dp"
            android:layout_height="84dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/blue"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:text="@string/collect_all_the_different_stars"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/rainbowCount"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="352dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            android:tint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collect"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>